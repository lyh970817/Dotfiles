{
  "suggest.noselect": false,
  "r.lsp.diagnostics": false,
  "python.jediEnabled": false, 
  "coc.preferences.formatOnSaveFiletypes": ["python"],
  "languageserver": {
  "haskell": {
    "command": "hie-wrapper",
    "args": ["--lsp"],
    "rootPatterns": [
      "stack.yaml",
      "cabal.config",
      "package.yaml"
    ],
    "filetypes": [
      "hs",
      "lhs",
      "haskell"
    ],
    "initializationOptions": {
      "languageServerHaskell": {
        "hlintOn": false
      }
    }
  }
}
}

