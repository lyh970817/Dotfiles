alias nvimrc='nvim ~/.config/nvim/init.vim'

# Verbosity and settings that you pretty much just always are going to want.
alias \
	cp="cp -iv" \
	mv="mv -iv" \
	rm="rm -v" \
	mkd="mkdir -pv" \

alias \
	g="git" \
	sdn="sudo shutdown -h now" \
	sr="sudo reboot -h now" \
	f="$FILE" \
	e="$EDITOR" \
	p="pamac" \
    r="R" \
    vpn="source vpn" \


