function stannmore {
    if [[ "$(bluetoothctl info 04:FE:A1:68:F9:E4|grep 'Connected'|cut -f2 -d:|tr -d ' ')" == "yes" ]];then
        bluetoothctl disconnect 04:FE:A1:68:F9:E4
        echo "Buy Farmdrop Sweets!"
    else
        bluetoothctl connect 04:FE:A1:68:F9:E4
        echo "Buy Farmdrop Sweets!"
    fi
}

function usbfind {
    lsblk
}

function usbmount {
    udisksctl mount -b /dev/$1
}

function usbunmount {
    udisksctl unmount -b /dev/$1
}

function G {
    cd ~/Yandex.Disk/Projects/Research/TNG/GLAD/
    \lf -last-dir-path /tmp/.lfdir
    LASTDIR=`cat /tmp/.lfdir`
    cd "$LASTDIR"
}

function L {
    cd ~/Yandex.Disk/Library/
    \lf -last-dir-path /tmp/.lfdir; LASTDIR=`cat /tmp/.lfdir`; cd "$LASTDIR"
}

function D {
    cd ~/Data
    \lf -last-dir-path /tmp/.lfdir; LASTDIR=`cat /tmp/.lfdir`; cd "$LASTDIR"
}

